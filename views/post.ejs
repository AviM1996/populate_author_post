<!DOCTYPE html>
<html lang="en">
<%-include("common/head.ejs")%>

    <body>
        <%-include("common/nav.ejs")%>

            <h1 class="text-center m-5"> Welcome to the Add Post's Page </h1>

            <div class="container">
                <h2>Add Post</h2>
                <form action="/addPost" method="post">
                  <div class="form-group">
                    <label for="name">heading:</label>
                    <input type="text" class="form-control" id="heading" name="heading" />
                  </div>
                  <div class="form-group">
                    <label for="email">content:</label>
                    <input type="price" class="form-control" id="content" name="content" />
                  </div>
                    <div class="form-group">
                        <label>Choose Author</label>
                        <select name="author" class="form-control">
                        <option disabled selected>Select Author</option>
                        <% for(let data of authors){ %>
                            <option value="<%= data.id %>"><%= data.authorName %></option>
                        <% } %>
                    </select>
                    </div>
                </div>
                  
                  <button type="submit" class="btn btn-primary">Submit</button>
                </form>
        

            <%-include("common/scripts.ejs")%>
    </body>

</html>

    
 